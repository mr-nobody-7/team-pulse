datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

enum Role {
  USER
  MANAGER
  ADMIN
}

enum LeaveType {
  VACATION
  SICK
  PERSONAL
  CASUAL
}

enum LeaveStatus {
  PENDING
  APPROVED
  REJECTED
  CANCELLED
}

enum Session {
  FULL_DAY
  FIRST_HALF
  SECOND_HALF
}

model Workspace {
  id        String   @id @default(uuid())
  name      String
  createdAt DateTime @default(now())

  users User[]
  teams Team[]
}

model Team {
  id        String   @id @default(uuid())
  name      String
  createdAt DateTime @default(now())

  workspace   Workspace @relation(fields: [workspaceId], references: [id])
  workspaceId String

  users User[]
}

model User {
  id           String   @id @default(uuid())
  name         String
  email        String   @unique
  passwordHash String
  role         Role     @default(USER)
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())

  workspace   Workspace @relation(fields: [workspaceId], references: [id])
  workspaceId String

  team                   Team?          @relation(fields: [teamId], references: [id])
  teamId                 String?
  requestedLeaveRequests LeaveRequest[]

  approvedLeaveRequests LeaveRequest[] @relation("Approver")
}

model LeaveRequest {
  id           String      @id @default(uuid())
  user         User        @relation(fields: [userId], references: [id])
  userId       String
  teamId       String
  startDate    DateTime
  startSession Session     @default(FULL_DAY)
  endDate      DateTime
  endSession   Session     @default(FULL_DAY)
  type         LeaveType
  status       LeaveStatus @default(PENDING)
  approver     User?       @relation("Approver", fields: [approverId], references: [id])
  approverId   String?
  comment      String?
  created_at   DateTime    @default(now())

  @@index([teamId])
  @@index([startDate])
  @@index([endDate])
  @@index([status])
}
